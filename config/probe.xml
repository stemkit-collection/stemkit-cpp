<scope name="user">
  <log level="info" show-process="true" show-pid="true" show-time="false">
    <file location="logs" size="2K" use-pipe="true" />
  </log>

  <scope name="sk::sys::User">
    <log show-time="true">
      <level severity="none" />
    </log>
  </scope>
</scope>

<scope name="pty">
  <log file-location="logs" file-size="2K" destination="file" level="debug" show-time="true" show-object="true" />
</scope>
