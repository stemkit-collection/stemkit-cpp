<scope>
  <log destination="std::cerr" level="info" show-time="true" show-object="true" />
</scope>

<scope name="user">
  <log destination="file" level="info" show-process="true" show-pid="true" show-time="false">
    <file location="logs" size="2K" backups="3" use-pipe="true" />
  </log>

  <scope name="sk::sys::User">
    <log show-time="true">
      <level severity="none" />
    </log>
  </scope>
</scope>

<scope name="pty">
  <log destination="file" level="debug" show-time="true" show-object="true">
    <file location="logs" size="2K" />
  </log>
</scope>
