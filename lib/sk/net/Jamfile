# vim: sw=2: ft=jam:

local library = sk.net ;

local objects = 
  UnknownHostException.cc
  DataInputStream.cc
  DataOutputStream.cc
  DatagramPacket.cc
  DatagramSocket.cc
  MulticastSocket.cc
  InetAddressFactory.cc
  InetAddress.cc
  InetSocketAddress.cc
  ServerSocket.cc
  Socket.cc
  SocketAddress.cc
  URL.cc
  URI.cc
;

use-project-libraries $(library). : sk.io sk.util ;

make-shared-library $(library) : $(objects) ;
add-project-library $(library) : $(library).ip4 ;
add-project-library $(library) : $(library).ip6 ;

make-subdirs ip4 ip6 ;
make-subdirs test ;
