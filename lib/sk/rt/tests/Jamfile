# vim: ft=jam: sw=2

local test = sk-rt-tests ;

local test-objects =
  EnvironmentTest.cc
  ActionsTest.cc
  StopWatchTest.cc
  TimeTest.cc
  TestSuite.cc
;

use-project-libraries $(test) : 
  sk.rt.thread 
  sk.rt.bundle 
  sk.util 
  sk.cppunit 
;

use-unit-test $(test) $(test-objects) ;
make-cpp-test $(test) : $(test-objects) ;
