# vim: ft=jam: sw=2

local test = sk-rt-test ;
local objects = 
  TestSuite.cc
  StopWatchTest.cc
  TimeTest.cc
;


if ! windows in $(project.PLATFORM_SPECIFICS) {
  use-pthreads $(test) ;
  use-project-libraries $(test) : sk.rt.thread sk.rt.thread.pthreads sk.rt.bundle sk.util sk.cppunit ;
}
else use-project-libraries $(test) : sk.rt.thread sk.rt.thread.win32 sk.rt.bundle sk.util sk.cppunit ;

use-unit-test $(test) $(objects) ;
make-cpp-test $(test) : $(objects) ;
