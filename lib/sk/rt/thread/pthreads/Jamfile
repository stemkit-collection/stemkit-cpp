# vim: ft=jam: sw=2:

local library = sk.rt.thread.pthreads. ;

local objects = 
  Factory.cc
  Exception.cc
  Implementation.cc
  Mutex.cc
  Thread.cc
  Condition.cc
  ConditionMediator.cc
;

use-pthreads $(library) ;
use-project-libraries $(library) : sk.rt.bundle sk.util ;
make-shared-library $(library) : $(objects) : sk.rt.thread.platform ;

make-subdirs tests ;
