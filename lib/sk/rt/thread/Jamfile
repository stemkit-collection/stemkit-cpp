# vim:sw=2:

local library = sk.rt.thread ;

local objects = 
  Main.cc
  Dispatcher.cc
  Implementation.cc
  State.cc
  AbstractLock.cc
  Runner.cc
  LockSpecializations.cc
  PrintingExceptionHandler.cc
  Inspector.cc
  Exit.cc
  ScopeArbitrator.cc

  ../Thread.cc
  ../Mutex.cc
  ../ReentrantLock.cc
;

make-shared-library $(library) : $(objects) ;
make-subdirs tests abstract mock ;

if windows in $(project.PLATFORM_SPECIFICS) {
  make-subdirs win32 ;
}
else make-subdirs pthreads ;
