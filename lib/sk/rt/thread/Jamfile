# vim:sw=2:

local library = sk.rt.thread ;

local objects = 
  Main.cc
  Dispatcher.cc
  Implementation.cc
  State.cc
  AbstractLock.cc
  Runner.cc

  ../Thread.cc
  ../Mutex.cc
  ../ReentrantLock.cc
;

make-library $(library) : $(objects) ;
make-subdirs tests abstract mock ;

if windows in $(project.PLATFORM_SPECIFICS) {
  make-subdirs mswin ;
}
else make-subdirs pthreads ;
