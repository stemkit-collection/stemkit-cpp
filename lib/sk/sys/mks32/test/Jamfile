  sk.cppunit 
  sk.sys 
  sk.io 
  sk.rt.thread
  sk.rt.bundle 
  sk.util 
;

make-program write-to-stream : write-to-stream.cc ;

use-unit-test $(test) $(objects) ;
make-cpp-test $(test) : $(objects) ;

make-subdirs process-spawner process-keeper ;
