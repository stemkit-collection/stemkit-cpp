local test = sk-sys-test ;

local objects = 
  ProcessTest.cc
  PipeProcessTest.cc
  DaemonProcessTest.cc
  StreamPortalTest.cc
  TestSuite.cc
;

use-project-library $(test) : 
  sk.cppunit 
  sk.sys 
  sk.io 
  sk.rt.thread
  sk.rt.thread.pthreads
  sk.rt.bundle 
  sk.util 
;

use-pthreads $(test) ;
