# vim: ft=jam:

local test = sk-sys-test ;

local test-objects = 
  ProcessTest.cc
  UserTest.cc
  PtyProcessTest.cc
  PipeProcessTest.cc
  DaemonProcessTest.cc
  TestSuite.cc
;

use-project-library $(test) : 
  sk.cppunit 
  sk.sys 
  sk.io 
  sk.rt.thread
  sk.rt.thread.pthreads
  sk.rt.bundle 
  sk.util 
;

use-pthreads $(test) ;
use-unit-test $(test) $(test-objects) ;
make-cpp-test $(test) : $(test-objects) ;
