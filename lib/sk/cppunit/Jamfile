# vim: ft=jam: sw=2:

local library = sk.cppunit ;

local objects = 
  SingleLineOutputter.cc
  TestRunner.cc
  SourcePath.cc
  StringAssert.cc
;

use-unit-test $(objects) ;

switch $(config.unit-test.disable) {
  case true : make-empty-library $(library) ;
  case * : make-library $(library) : $(objects) ;
}

make-subdirs test ;
