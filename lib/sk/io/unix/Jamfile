
local library = sk.io.unix ;

objects = 
  AnonymousPipe.cc
  TtyDevice.cc
  PtyImpl.cc
  PtySpecifics-$(project.PTY_SPECIFICS).cc
  Pty.cc
;

make-library $(library) : $(objects) ;
make-subdirs test ;

probes = 
  pty-probe
;

use-project-libraries $(probes) : sk.io sk.rt.bundle sk.util ;

local _probe ;
for _probe in $(probes) {
  make-program $(_probe) : $(_probe).cc ;
}
