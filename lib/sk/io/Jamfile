# vim: sw=2:

library = sk.io ;

objects = 
  AbstractInputStream.cc
  AbstractOutputStream.cc
  ByteArrayInputStream.cc
  ByteArrayOutputStream.cc
  DelegatingInputStream.cc
  DelegatingOutputStream.cc
  DataInputStream.cc
  DataOutputStream.cc
  FileDescriptor.cc
  FileDescriptorInputStream.cc
  FileDescriptorOutputStream.cc
  File.cc
  FileInputStream.cc
  FileOutputStream.cc
  BufferedInputStream.cc
  BufferedOutputStream.cc
  IOException.cc
  EOFException.cc
  ClosedChannelException.cc
  AbstractFileDescriptorPipe.cc
  FileDescriptorPipe.cc
  TtyFileDescriptor.cc
  DelegatingTty.cc
;

make-library $(library) : $(objects) ;
make-subdir test ;

if ! windows in $(project.PLATFORM_SPECIFICS) {
  make-subdir unix ;
  add-project-library $(library) : $(library).unix ;
}

probes = 
  pty-probe
;

use-project-libraries $(probes) : sk.io sk.rt.bundle sk.util ;

local _probe ;
for _probe in $(probes) {
  make-program $(_probe) : $(_probe).cc ;
}
